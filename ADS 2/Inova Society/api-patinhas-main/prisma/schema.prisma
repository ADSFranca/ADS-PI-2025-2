generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Animal {
  id           Int       @id @default(autoincrement())
  nome         String
  idade        Int?
  tipo         String?
  sexo         String?      // se quiser, d√° pra trocar por enum depois
  data_resgate DateTime?
  canil        String?

  @@map("animal")
}

model Adotante {
  id       Int     @id @default(autoincrement())
  nome     String
  endereco String?
  telefone String?
  cep      String?
  email    String  @unique

  @@map("adotante")
}

model Voluntario {
  id       Int     @id @default(autoincrement())
  nome     String
  telefone String?
  senha    String
  usuario  String  @unique

  @@map("voluntario")
}
